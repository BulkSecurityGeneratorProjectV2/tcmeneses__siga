<hibernate-mapping package="br.gov.jfrj.siga.ex">

	<class name="ExClassificacao" schema="SIGA" table="EX_CLASSIFICACAO" batch-size="500">
		<id name="idClassificacao" column="ID_CLASSIFICACAO"
