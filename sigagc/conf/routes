# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /favicon.ico                            404
GET     /                                       SigaGcApplication.index

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

*		/tag/selecionar							SigaGcApplication.selecionarTag
*		/tag/buscar								SigaGcApplication.buscarTag

*		/{tipo}/buscar							SigaGcApplication.buscarSiga
*		/siga/{tipo}/buscar.action				SigaGcApplication.buscarSigaFromPopup
*		/{tipo}/selecionar						SigaGcApplication.selecionarSiga

# Catch all
*       /{action}                  				SigaGcApplication.{action}
*       /{controller}/{action}                  {controller}.{action}
